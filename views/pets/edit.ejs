<%- include('../partials/header.ejs') %>

<form
  action="/pets/<%= pet._id %>?_method=PUT"
  method="POST"
  class="form-signin"
>
  <label for="name" class="sr-only">Name</label>
  <input
    type="text"
    id="name"
    name="name"
    class="form-control"
    placeholder="Name"
    value="<%= pet.name %>"
    required
    autofocus
  />
  <label for="type" class="sr-only">Type</label>
  <input
    type="text"
    id="type"
    name="type"
    class="form-control"
    placeholder="Type"
    value="<%= pet.type %>"
    required
  />
  <label for="age" class="sr-only">Age</label>
  <input
    type="number"
    id="age"
    name="age"
    class="form-control"
    placeholder="Age"
    value="<%= pet.age %>"
  />
  <label for="vaccination" class="sr-only">Vaccination</label>
  <input
    type="number"
    id="vaccination"
    name="vaccination"
    class="form-control"
    placeholder="Vaccination"
    value="<%= pet.vaccination %>"
  />
  <label for="imageurl" class="sr-only">Image URL</label>
  <input
    type="text"
    id="imageurl"
    name="imageurl"
    class="form-control"
    placeholder="Image URL"
    value="<%= pet.imageurl %>"
  />
  <label for="location" class="sr-only">Location</label>
  <input
    type="text"
    id="location"
    name="location"
    class="form-control"
    placeholder="Location"
    value="<%= pet.location %>"
  />
  <button class="btn btn-lg btn-primary btn-block" type="submit">
    Update Pet
  </button>
</form>

<%- include('../partials/footer.ejs') %>
