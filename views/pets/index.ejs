<%- include('../partials/header.ejs') %>
<div class="container">
  <div class="row">
    <% pets.forEach(pet => { %>
    <div class="col-md-4">
      <div class="card mb-4 shadow-sm">
        <a href="/pets/<%= pet._id %>">
          <img
            src="<%= pet.imageurl %>"
            class="card-img-top"
            alt="<%= pet.name %>"
          />
          <div class="card-body">
            <h5 class="card-title"><%= pet.name %></h5>
          </div>
        </a>
      </div>
    </div>
    <% }) %>
  </div>
</div>

<%- include('../partials/footer.ejs') %>
