<%- include('../partials/header.ejs') %>

<h1><%= pet.name %></h1>
<div class="container">
  <div class="flex-container">
    <div class="col-md-6">
      <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
          <% pet.imageUrls.forEach((url, index) => { %>
          <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="<%= index %>" class="<%= index === 0 ? 'active' : '' %>" aria-current="<%= index === 0 ? 'true' : 'false' %>" aria-label="Slide <%= index + 1 %>"></button>
          <% }) %>
        </div>
        <div class="carousel-inner">
          <% pet.imageUrls.forEach((url, index) => { %>
          <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
            <img src="<%= url %>" class="d-block w-100" alt="...">
          </div>
          <% }) %>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
      <p><strong>Type:</strong> <%= pet.type %></p>
      <p><strong>Breed:</strong> <%= pet.breed %></p>
      <p><strong>Age:</strong> <%= pet.age %></p>
      <p><strong>Vaccination:</strong> <%= pet.vaccination %></p>
      <p><strong>Location:</strong> <%= pet.location %></p>
      <p><strong>Owner:</strong> <%= pet.owner.name %></p>
      <p><strong>Owner's Email:</strong> <%= pet.owner.email %></p>
      <% if (user && (user._id.equals(pet.owner._id) || user.isAdmin)) { %>
      <div class="btn-container mt-3">
        <a href="/pets/<%= pet._id %>/edit" class="btn btn-warning">Edit</a>
        <form
          action="/pets/<%= pet._id %>?_method=DELETE"
          method="POST"
          style="display: inline"
        >
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
        <% if (user) { %>
        <form
          action="/favorites/<%= pet._id %>?_method=<%= user.favorites.includes(pet._id) ? 'DELETE' : 'POST' %>"
          method="POST"
          style="display: inline"
        >
          <button type="submit" class="btn btn-primary">
            <%= user.favorites.includes(pet._id) ? '⭐️ Unfavorite' : '⭐️ Favorite' %>
          </button>
        </form>
        <% } %>
      </div>
      <div class="mt-3">
        <form action="/pets/<%= pet._id %>/images" method="POST" enctype="multipart/form-data">
          <div class="form-group">
            <label for="images">Add Images:</label>
            <input type="file" class="form-control" id="images" name="images" multiple>
          </div>
          <button type="submit" class="btn btn-primary mt-2">Upload</button>
        </form>
      </div>
      <% } %>
    </div>
    <div class="col-md-6">
      <% if (pet.story) { %>
      <h2>Adoption Story</h2>
      <p><%= pet.story.text %></p>
      <% if (user && (user._id.equals(pet.owner._id) || user.isAdmin)) { %>
      <a href="/pets/<%= pet._id %>/story/edit" class="btn btn-warning">Edit Story</a>
      <form
        action="/pets/<%= pet._id %>/story?_method=DELETE"
        method="POST"
        style="display: inline"
      >
        <button type="submit" class="btn btn-danger">Delete Story</button>
      </form>
      <% } %>
      <% } else if (user && user._id.equals(pet.owner._id)) { %>
      <h2>Add Adoption Story</h2>
      <form action="/pets/<%= pet._id %>/story" method="POST">
        <div class="form-group">
          <label for="story">Story:</label>
          <textarea class="form-control" id="story" name="text" rows="5" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary mt-2">Submit</button>
      </form>
      <% } %>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-md-12">
      <h2>Comments</h2>
      <% pet.comments.forEach(comment => { %>
      <div class="card mb-2">
        <div class="card-body">
          <p><%= comment.text %></p>
          <p><small>By <%= comment.author.name %> on <%= comment.createdAt.toDateString() %></small></p>
          <% if (user && (comment.author._id.equals(user._id) || pet.owner._id.equals(user._id) || user.isAdmin)) { %>
          <form
            action="/pets/<%= pet._id %>/comments/<%= comment._id %>?_method=DELETE"
            method="POST"
            style="display: inline"
          >
            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
          </form>
          <% } %>
          <% if (user && comment.author._id.equals(user._id)) { %>
          <a href="/pets/<%= pet._id %>/comments/<%= comment._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
          <% } %>
        </div>
      </div>
      <% }) %>
      <% if (user) { %>
      <form action="/pets/<%= pet._id %>/comments" method="POST">
        <div class="form-group">
          <label for="comment">Add a comment:</label>
          <textarea class="form-control" id="comment" name="text" rows="3" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary mt-2">Submit</button>
      </form>
      <% } %>
    </div>
  </div>
</div>

<%- include('../partials/footer.ejs') %>