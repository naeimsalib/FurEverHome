<%- include('../partials/header.ejs') %>

<h1><%= pet.name %></h1>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <img src="<%= pet.imageurl %>" class="img-fluid" alt="<%= pet.name %>" />
    </div>
    <div class="col-md-6">
      <p><strong>Type:</strong> <%= pet.type %></p>
      <p><strong>Age:</strong> <%= pet.age %></p>
      <p><strong>Vaccination:</strong> <%= pet.vaccination %></p>
      <p><strong>Location:</strong> <%= pet.location %></p>
      <p><strong>Owner:</strong> <%= pet.owner.name %></p>
      <% if (user && (user._id.equals(pet.owner._id) || user.isAdmin)) { %>
      <a href="/pets/<%= pet._id %>/edit" class="btn btn-warning">Edit</a>
      <form
        action="/pets/<%= pet._id %>?_method=DELETE"
        method="POST"
        style="display: inline"
      >
        <button type="submit" class="btn btn-danger">Delete</button>
      </form>
      <% } %>
      <% if (user) { %>
      <form
        action="/favorites/<%= pet._id %>?_method=<%= user.favorites.includes(pet._id) ? 'DELETE' : 'POST' %>"
        method="POST"
        style="display: inline"
      >
        <button type="submit" class="btn btn-primary">
          <%= user.favorites.includes(pet._id) ? '⭐️ Unfavorite' : '⭐️ Favorite' %>
        </button>
      </form>
      <% } %>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-md-12">
      <h2>Comments</h2>
      <% pet.comments.forEach(comment => { %>
      <div class="card mb-2">
        <div class="card-body">
          <p><%= comment.text %></p>
          <p><small>By <%= comment.author.name %> on <%= comment.createdAt.toDateString() %></small></p>
          <% if (user && (comment.author._id.equals(user._id) || pet.owner._id.equals(user._id) || user.isAdmin)) { %>
          <form
            action="/pets/<%= pet._id %>/comments/<%= comment._id %>?_method=DELETE"
            method="POST"
            style="display: inline"
          >
            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
          </form>
          <% } %>
          <% if (user && comment.author._id.equals(user._id)) { %>
          <a href="/pets/<%= pet._id %>/comments/<%= comment._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
          <% } %>
        </div>
      </div>
      <% }) %>
      <% if (user) { %>
      <form action="/pets/<%= pet._id %>/comments" method="POST">
        <div class="form-group">
          <label for="comment">Add a comment:</label>
          <textarea class="form-control" id="comment" name="text" rows="3" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary mt-2">Submit</button>
      </form>
      <% } %>
    </div>
  </div>
</div>

<%- include('../partials/footer.ejs') %>