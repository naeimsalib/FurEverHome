<%- include('../partials/header.ejs') %>
<div class="container mt-5">
  <h1>Your Adoption Requests</h1>
  <div class="row">
    <% adoptionRequests.forEach(request => { %>
    <div class="col-md-4 mb-4">
      <div class="card h-100">
        <a href="/pets/<%= request.pet._id %>">
          <div class="pet-card">
            <img
              src="<%= request.pet.imageUrls.length > 0 ? request.pet.imageUrls[0] : '/assets/no-image.png' %>"
              alt="<%= request.pet.name %>"
              class="img-fluid"
            />
          </div>
        </a>
        <div class="card-body">
          <h5 class="card-title"><%= request.pet.name %></h5>
          <% if (!request.seenByRequester) { %>
            <span class="notification-badge">1</span>
          <% } %>
          <p class="card-text"><strong>Status:</strong> <%= request.status %></p>
          <a href="/adoption-requests/<%= request._id %>" class="btn btn-primary">View Request</a>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</div>
<%- include('../partials/footer.ejs') %>