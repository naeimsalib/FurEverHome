<%- include('./partials/header.ejs') %>

<div class="container">
  <div class="row">
    <% pets.forEach(pet => { %>
    <div class="col-md-4">
      <div class="card mb-4 shadow-sm">
        <img
          src="<%= pet.imageurl %>"
          class="card-img-top"
          alt="<%= pet.name %>"
        />
        <div class="card-body">
          <h5 class="card-title"><%= pet.name %></h5>
          <p class="card-text">Type: <%= pet.type %></p>
          <p class="card-text">Age: <%= pet.age %></p>
          <p class="card-text">Vaccination: <%= pet.vaccination %></p>
          <p class="card-text">Location: <%= pet.location %></p>
          <p class="card-text">Owner: <%= pet.owner.name %></p>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</div>

<%- include('./partials/footer.ejs') %>
